@using ReserveParkingSpaceApp.Controllers
@using ReserveParkingSpaceApp.ViewModels
@model ParkingReservation;

@{
}

<div id="popUp" class="bg-modal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
        <div id="closeModal" class="close">+</div>
        @using (Html.BeginForm(nameof(HomeController.ReserveParkingSpace), "Home")){
             <div class="form-floating">
                 <select asp-for="SpotShift" class="form-select" asp-items="@Html.GetEnumSelectList(typeof(ParkingReservation.Shift))">
                     <option value=""></option>
                 </select>
                 <label>Shift</label>
             </div>
            <div class="form-floating">
                <input asp-for="StartDate" class="form-control" type="date">
                <label>Start date</label>
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="EndDate" class="form-control" type="date">
                <label>End date</label>
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input type="submit" class="form-control" name="Save">
            </div>
            @Html.HiddenFor(m => m.SpotId)
        }
    </div>
    </div>
    
</div>
