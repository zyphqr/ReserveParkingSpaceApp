@using ReserveParkingSpaceApp.ViewModels

@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="css/Popup.css">
</head>
<body>
    @if (User.Identity.Name != null)
    {
        <partial name="~/Views/Home/Partials/_DateShiftForm.cshtml" model="new DateShiftVM()"></partial>
        <div class="container">
            <div id="parkingSpotsGrid" class="row">
                <p>Select date and shift.</p>
            </div>
        </div>

        <div id="popUp" class="bg-modal">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div id="closeModal" class="close">+</div>
                    <div id="modalContainer"></div>
                </div>
            </div>
        </div>
    }
    else
    {
        <p>Please log in.</p>
    }
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.unobtrusive-ajax.js"></script>
    <script src="~/js/CloseOpenPopup.js"></script>
</body>
</html>